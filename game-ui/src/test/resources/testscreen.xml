<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<root>
    <!-- this xml file can contain multiple screens, but only one screen per file is recommended -->
    <screen id="testscreen" background="wallpaper/bg.png">
        <!-- screen -->

        <properties>
            <xPos>0</xPos>
            <yPos>0</yPos>
            <width>parent</width>
            <height>parent</height>

            <cursor>cursor/ui_cursor.png</cursor>
        </properties>
        <styles>
            <style>style.xml</style>
            <style>styles/style1.xml</style>
        </styles>
        <music>
            <soundtrack path="music1.ogg" loop="true" volume="1.0" />
        </music>
        <container>
            <!-- button which is only enabled, if feature tag1 OR tag2 is available -->
            <button id="button1" featuretags="tag1, tag2" />

            <widget type="button" />
        </container>
    </screen>
</root>